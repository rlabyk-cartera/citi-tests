                                <CONFIG>${CONFIG}</CONFIG>
                                <PREFIX>${PREFIX}</PREFIX>
                                <SUITE>${SUITE}</SUITE>
                                <BROWSER>${BROWSER}</BROWSER>
                            </environmentVariables>
                            <suiteXmlFiles>
                                <suiteXmlFile>testng.xml</suiteXmlFile>
                            </suiteXmlFiles>
                        </configuration>
