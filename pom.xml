                            </environmentVariables>
                            <suiteXmlFiles>
                                <suiteXmlFile>hiw.xml</suiteXmlFile>
                            </suiteXmlFiles>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
